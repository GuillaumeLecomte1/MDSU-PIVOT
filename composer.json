{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "inertiajs/inertia-laravel": "^1.0",
        "intervention/gif": "^4.2",
        "intervention/image": "2.7",
        "laravel/framework": "^11.9",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^4.6",
        "stripe/stripe-php": "^16.5",
        "tightenco/ziggy": "^2.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/breeze": "^2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "nunomaduro/larastan": "^3.0",
        "pestphp/pest": "^3.5",
        "pestphp/pest-plugin-laravel": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "analyse": [
            "@php -r \"echo '=== Analyse du code avec PHPStan niveau 5 ===\\n';\"",
            "@php vendor/bin/phpstan analyse --level=5 --memory-limit=512M"
        ],
        "style": [
            "@php -r \"echo '=== Vérification du style du code ===\\n';\"",
            "@php vendor/bin/pint --test",
            "@php -r \"echo '\\n=== Vérification terminée ===\\n';\""
        ],
        "style:fix": [
            "@php -r \"echo '=== Correction automatique du style ===\\n';\"",
            "@php vendor/bin/pint",
            "@php -r \"echo '\\n=== Nettoyage du cache ===\\n';\"",
            "@php artisan cache:clear",
            "@php -r \"echo '=== Style corrigé avec succès ===\\n';\""
        ],
        "style:ci": [
            "@php -r \"echo '=== Vérification du style pour CI ===\\n';\"",
            "@php vendor/bin/pint --test --format=github"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        },
        "process-timeout": 0
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
